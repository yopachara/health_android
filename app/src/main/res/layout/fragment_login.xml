<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.rey.material.demo.LoginFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="#333333"
            android:textSize="30sp"/>
    </LinearLayout>

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/usernameWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="textEmailAddress"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameWrapper"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"/>

    </android.support.design.widget.TextInputLayout>
    <View
        android:layout_width="100dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.rey.material.widget.Button
            android:id="@+id/button_bt_raise"
            android:layout_width="100dp"
            android:layout_height="@dimen/bt_height"
            android:text="BUTTON"
            app:v_styleId="@array/button_raise"/>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"/>

        <com.rey.material.widget.Button
            android:id="@+id/button_bt_raise_color"
            android:layout_width="100dp"
            android:layout_height="@dimen/bt_height"
            android:text="BUTTON"
            app:v_styleId="@array/button_raise_color"/>

        <com.rey.material.widget.Button
            android:id="@+id/testBut"
            android:layout_width="100dp"
            android:layout_height="@dimen/bt_height"
            android:text="test"
            app:v_styleId="@array/button_raise"/>

    </LinearLayout>

</LinearLayout>
