<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="name"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:gravity="top|right"
                android:text="username"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="10sp"
                android:layout_below="@+id/username"
                android:layout_alignRight="@+id/username"
                android:layout_alignEnd="@+id/username"/>

            <TextView
                android:id="@+id/cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="cal"
                android:textSize="10sp"
                android:layout_alignBaseline="@+id/date"
                android:layout_alignBottom="@+id/date"
                android:layout_alignLeft="@+id/name"
                android:layout_alignStart="@+id/name"/>
            <TextView
                android:id="@+id/pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="pro"
                android:textSize="10sp"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:layout_alignTop="@+id/fat"
                android:layout_toRightOf="@+id/cal"
                android:layout_toEndOf="@+id/cal"/>
            <TextView
                android:id="@+id/fat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="fat"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_alignTop="@+id/carbo"
                android:layout_toRightOf="@+id/pro"
                android:layout_toEndOf="@+id/pro"/>
            <TextView
                android:id="@+id/carbo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="carbo"
                android:textSize="10sp"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_alignTop="@+id/cal"
                android:layout_toRightOf="@+id/fat"
                android:layout_toEndOf="@+id/fat"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>